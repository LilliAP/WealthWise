@using WealthWise_RCD.Models
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    var amount = ViewData["Amount"]?.ToString() ?? "Awaiting Input";

    
}
<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="interest-calculator-tab" data-toggle="tab" href="#interest-calculator" role="tab" aria-controls="interest-calculator" aria-selected="true">Interest Calculator</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="retirement-calculator-tab" data-toggle="tab" href="#retirement-calculator" role="tab" aria-controls="retirement-calculator" aria-selected="false">Retirement Calculator</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="budget-planner-tab" data-toggle="tab" href="#budget-planner" role="tab" aria-controls="budget-planner" aria-selected="false">Monthly Budget Planner</a>
    </li>
</ul>
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="interest-calculator" role="tabpanel" aria-labelledby="interest-calculator-tab">
        <!-- Interest Calculator Content -->
        <h3>Interest Calculator</h3>
        <form method="post" >
            <div class="form-group">
                <label for="Initial Amount">Initial Amount</label>
                <input type="number" class="form-control" id="initialAmount" name="InitialAmount" placeholder="Enter initial amount" step="0.01">
            </div>
            <div class="form-group">
                <label for="numberOfPayments">Number of Payments</label>
                <input type="number" class="form-control" id="numberOfPayments" name="NumberOfPayments" placeholder="Enter number of payments" step="0.01">
            </div>
            <div class="form-group">
                <label for="time">Time</label>
                <input type="number" class="form-control" id="time" name="Time" placeholder="Enter time" step="0.01">
            </div>
            <div class="form-group">
                <label for="interestRate">Interest Rate (%)</label>
                <input type="number" class="form-control" id="interestRate" name="InterestRate" placeholder="Enter interest rate" step="0.01">
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Calculate</button>
        </form>
        <div class="mt-3">
            <h5>Formula:</h5>
            <img src="~/images/CompoundInterestFormula.png" alt="Interest Calculation Formula" class="img-fluid">
        </div>
        <div class="alert alert-info mt-3">
            <strong>Calculated Amount:</strong> @amount
        </div>
    </div>
    <div class="tab-pane fade show active" id="retirement-calculator" role="tabpanel" aria-labelledby="retirement-calculator-tab">
        <!-- Retirement Calculator Content -->
        <h3>Retirement Calculator</h3>
        <form method="post">
            <div class="form-group">
                <label for="loanAmount">Loan Amount</label>
                <input type="number" class="form-control" id="loanAmount" name="LoanAmount" placeholder="Enter loan amount" step="0.01">
            </div>
            <div class="form-group">
                <label for="numberOfPayments">Number of Payments</label>
                <input type="number" class="form-control" id="numberOfPayments" name="NumberOfPayments" placeholder="Enter number of payments" step="0.01">
            </div>
            <div class="form-group">
                <label for="time">Time</label>
                <input type="number" class="form-control" id="time" name="Time" placeholder="Enter time" step="0.01">
            </div>
            <div class="form-group">
                <label for="interestRate">Interest Rate (%)</label>
                <input type="number" class="form-control" id="interestRate" name="InterestRate" placeholder="Enter interest rate" step="0.01">
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Calculate</button>
        </form>
        <div class="mt-3">
            <h5>Formula:</h5>
            <img src="~/images/CompoundInterestFormula.png" alt="Interest Calculation Formula" class="img-fluid">
        </div>
        <div class="alert alert-info mt-3">
            <strong>Calculated Amount:</strong> @amount
        </div>
    </div>    
    <div class="tab-pane fade" id="budget-planner" role="tabpanel" aria-labelledby="budget-planner-tab">
        <!-- Monthly Budget Planner Content -->
        <h3>Monthly Budget Planner</h3>
        <form>
            <!-- Add your form fields here -->
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('#myTab a').on('click', function (e) {
                e.preventDefault();
                $(this).tab('show');
            });
        });
    </script>
}</li>