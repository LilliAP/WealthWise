@{
    ViewData["Title"] = "Home page";
}

<div class="hero" style="text-align: center">
    <h1 class="display-4">Welcome To WealthWise</h1>
    <h3 class="text-muted"> Your Financial Journey Begins Here</h3>
    <img src="~/images/hero banner.jpg" class="hero-image" width="100px" height="100px" style="border-radius: 50%; border: 1px solid #ccc;">
</div>

<div class="container">
    <div class="row align-items-center section">
        <div class="col-md-6 text-center">
            <img src="~/images/Financial Advisory.jpg" alt="Financial Advisory" class="feature-image" width="400px" height="450px">
        </div>
        <div class="col-md-6">
            <h2>Expert Financial Guidance</h2>
            <p>
                WealthWise Financial Advising is a digital platform designed to empower individuals with expert financial guidance
                and advanced tools to make informed decisions. Our platform connects users with certified financial advisors for personalized
                consultations on budgeting, investments, and retirement planning.
            </p>
        </div>
    </div>

    <div class="row align-items-center section flex-md-row-reverse">
        <div class="col-md-6 text-center">
            <img src="~/images/Financial Tools.jpg" alt="Financial Tools" class="feature-image" width="400px" height="425px">
        </div>
        <div class="col-md-6">
            <h2>Powerful Financial Tools</h2>
            <p>
                Beyond advisory services, WealthWise offers an integrated financial education hub featuring market news, stock analysis,
                and expert-led webinars. Users can also access powerful financial calculators for budgeting, loan interest, and retirement
                planning, ensuring hands-on financial management.
            </p>
        </div>
    </div>

    <div class="row align-items-center section">
        <div class="col-md-6 text-center">
            <img src="~/images/Premium Features.jpg" alt="Subscription Model" class="feature-image" width="400px" height="450px">
        </div>
        <div class="col-md-6">
            <h2>Premium Features for Financial Success</h2>
            <p>
                WealthWise stands out by blending personalized financial consulting with real-time market insights and interactive learning resources.
                Through our structured subscription model, we provide premium features such as advanced portfolio analysis, exclusive content,
                and one-on-one expert guidance, helping users achieve long-term financial success.
            </p>
        </div>
    </div>
</div>
