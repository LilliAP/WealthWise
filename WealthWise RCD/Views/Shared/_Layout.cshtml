<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WealthWise_by_RCD</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WealthWise_RCD.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <style>
            header {
                width: 100%;
                height: fit-content;
                background-color: #d5cab8;
                -webkit-text-fill-color: white;
                text-align: left;
            }
        </style>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-#adad85  mb-3">
            <div class="container">
                <img src="~/images/RCDLogo.jpg" alt="Roman Cat Dynasty Logo" width="50" height="50" />
                <a class="navbar-brand" asp-controller="Home" asp-action="Index" id="title">WealthWise by RCD</a>
                <style>
                    #title {
                        color: #5d5d3c;
                    }
                </style>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark @(ViewContext.RouteData.Values["Controller"]?.ToString() == "FinancialCalcs" ? "active font-weight-bold" : "")"
                               asp-controller="FinancialCalcs" asp-action="Index">Financial Calculators</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(ViewContext.RouteData.Values["Controller"]?.ToString() == "LearningHub" ? "active font-weight-bold" : "")"
                               asp-controller="LearningHub" asp-action="Index">Learning Hub</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(ViewContext.RouteData.Values["Controller"]?.ToString() == "News" ? "active font-weight-bold" : "")"
                               asp-controller="News" asp-action="Index">News</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Scheduler" ? "active font-weight-bold" : "")"
                               asp-controller="Scheduler" asp-action="Index">Scheduler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Account" ? "active font-weight-bold" : "")"
                               asp-controller="Account" asp-action="Index">Account</a>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>
        <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - WealthWise_by_RCD - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
        <style>
            footer {
                position: fixed;
                left: 0;
                bottom: 0;
                width: 100%;
                height: fit-content;
                background-color: #adad85;
                -webkit-text-fill-color: #5d5d3c;
                text-align: left;
            }
        </style>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
