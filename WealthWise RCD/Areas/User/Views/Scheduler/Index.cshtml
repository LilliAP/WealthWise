<h2 class="timeline">Appointment Timeline</h2>
<table class="table table-sm"> 
    <thead>
        <tr>
            <th scope="col">Time</th>
            <th scope="col">Monday</th>
            <th scope="col">Tuesday</th>
            <th scope="col">Wednesday</th>
            <th scope="col">Thursday</th>
            <th scope="col">Friday</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">8:00 AM</th>
        </tr>
        <tr>
            <th scope="row">9:00 AM</th>
        </tr>
        <tr>
            <th scope="row">10:00 AM</th>
        </tr>
        <tr>
            <th scope="row">11:00 AM</th>
        </tr>
        <tr>
            <th scope="row">12:00 PM</th>
        </tr>
        <tr>
            <th scope="row">1:00 PM</th>
        </tr>
        <tr>
            <th scope="row">2:00 PM</th>
        </tr>
        <tr>
            <th scope="row">3:00 PM</th>
        </tr>
        <tr>
            <th scope="row">4:00 PM</th>
        </tr>
        <tr>
            <th scope="row">5:00 PM</th>
        </tr>
    </tbody>
</table>

<div class="change-advisor"></div>
    <form method="=post">
        <div class="form-group">
            <label class="change-advisor" for="Change Advisor">Change Advisor</label>
            <div class="position-relative">
                <input type="search" class="form-control" id="changeAdvisor" name="ChangeAdvisor" placeholder="Enter Advisor Name">
            </div> 
        </div>
        <div class="reason-advisor-change">
            <label for="reason-advisor-change">Reason for Advisor Change</label>
            <input type="textarea" class="form-control" id="reason" name="reason-advisor-change" placeholder="State your reason for changing advisors">
        </div>
        <button type="submit" class="btn btn-primary mt-3">Submit</button>
    </form>
</div>

<style>
    .custom-table th, .custom-table td, .custom-body{
        padding:  5x !important;
        background-color: transparent !important;
    }
    .no-border {
        background-color: transparent !important;
        border: none;
        box-shadow: none;
    }
    h5 {
        padding-top: 1rem;
    }
    .change-advisor, .reason-advisor-change {
        padding-top:1rem;
        font: size 2rem;;
        font-weight: 1000;
    }
</style>
