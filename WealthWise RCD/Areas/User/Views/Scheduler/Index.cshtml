@using WealthWise_RCD.Models
@{
}
<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4">Scheduler</h1>
        <p class="lead text-muted">Schedule appointments with Users or Advisors!</p>
    </div>
</div> 

<div>
    <div>
        <h2>User Information</h1>
    </div>
</div>

<div>
    <p>Name: </p>
    <p>Current Advisor: </p>
</div>
<div class="card p-2 mt-2 no-border">
    <h5>Upcoming appointments</h5>
    <table class="table table-striped custom-table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Time</th>
                <th>Advisor</th>
            </tr>
        </thead>
        <tbody class="custom-body">
            <td>February 26, 2025</td>
            <td>3:00 PM</td>
            <td>Your Mom</td>
            <td><button class="btn btn danger btn-sm">Cancel</button></td>
        </tbody>
    </table>
</div>
