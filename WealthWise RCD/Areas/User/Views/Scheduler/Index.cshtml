@using WealthWise_RCD.Models
<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4">Scheduler</h1>
        <p class="lead text-muted">Schedule appointments with Users or Advisors</p>
    </div>

    <div class="mt-4">
        <p><strong>Name:</strong> [User's Name]</p>
        <p><strong>Current Advisor:</strong> [Advisor's Name]</p>
        <p><strong>Upcoming Appointments:</strong> [List of Appointments]</p>
    </div>

    <form method="post" class="mt-4">
        <div class="form-group">
            <label for="changeAdvisor" class="form-label">Change Advisor</label>
            <input type="search"
                   class="form-control"
                   id="changeAdvisor"
                   name="changeAdvisor"
                   placeholder="Enter Advisor Name"
                   aria-describedby="changeAdvisorHelp" />
            <small id="changeAdvisorHelp" class="form-text text-muted">Type the name of the advisor you wish to switch to.</small>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Submit</button>
    </form>
</div>
