@using WealthWise_RCD.Models
@{
    var interestAmount = ViewData["InterestAmount"]?.ToString() ?? " ";
    var retirementAmount = ViewData["RetirementAmount"]?.ToString() ?? " ";
    var activeTab = ViewData["ActiveTab"]?.ToString() ?? "interest";
    var yearlySavings = ViewData["YearlySavings"] as Dictionary<int, double>; // Assuming yearly savings is a dictionary with year as key and savings as value
}

<head>
    <script src="https://kit.fontawesome.com/32c95df022.js" crossorigin="anonymous"></script>
</head>

<!-- Back Button -->
<a asp-area="User" asp-controller="FinancialCalcs" asp-action="Index">
    <i class="fa-solid fa-arrow-left fa-xl" style="color: #828282;"></i>
</a>

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4" style="text-align: center">Monthly Budget Planner</h1>
        <p class="lead text-muted">Create a new monthly budget!</p>
    </div>

    <form method="post">
        <div class="form-group">
            <label for="Initial Amount">Initial Amount:</label>
            <div class="position-relative">
                <input type="number" class="form-control money-input-interest" id="initialAmount" name="InitialAmount" placeholder="Enter initial amount" step="0.01">
                <span class="dollar-sign-interest">$</span>
            </div>
        </div>
        <div class="form-group">
            <label for="numberOfPayments">Number of Payments:</label>
            <input type="number" class="form-control" id="numberOfPayments" name="NumberOfPayments" placeholder="Enter number of payments" step="1">
        </div>
        <div class="form-group">
            <label for="time">Time:</label>
            <input type="number" class="form-control" id="time" name="Time" placeholder="Enter the times you want to compound" step="1">
        </div>
        <div class="form-group">
            <label for="interestRate">Interest Rate (%):</label>
            <input type="number" class="form-control" id="interestRate" name="InterestRate" placeholder="Enter interest rate" step="0.01">
        </div>
        <input type="hidden" name="activeTab" value="interest" />
        <br />
        <button type="submit" class="btn btn-primary">Calculate</button>
    </form>
</div>

<style>
    #calculatedAmountBox {
        background-color: white;
        border-color: lightgrey;
        -webkit-text-fill-color: #8a8a5c;
        text-align: left;
        padding: 10px;
    }

    .link-box 
    {
        display: inline-block;
        width: 200px;
        height: 200px;
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 20px;
        text-align: center;
        margin: 20px;
        background-color: white;
    }

    .icon-box 
    {
        margin-top: 50px;
        margin-bottom: 30px;
    }

    .name-box 
    {
        margin-top: 30px;
        font-size: 18px;
        font-weight: bold;
        color: #7a7a52;
    }

    .position-relative {
        position: relative;
    }

    .dollar-sign-interest  {
        position: absolute;
        left: 10px;
        top: 50%;
        transform: translateY(-50%);
        font-size: 1rem;
        color: lightgray;
        opacity: 0;
        transition: opacity 0.2s ease-in;
    }

    .money-input-interest {
        padding-left: 10px;
    }

    .dollar-sign-retirement {
        position: absolute;
        left: 10px;
        top: 50%;
        transform: translateY(-50%);
        font-size: 1rem;
        color: lightgray;
        opacity: 0;
        transition: opacity 0.2s ease-in;
    }

    .money-input-retirement {
        padding-left: 10px;
    }
</style>

