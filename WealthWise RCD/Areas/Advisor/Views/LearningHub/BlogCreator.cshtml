<!-- Back button -->
<a asp-area="Advisor" asp-controller="LearningHub" asp-action="BlogPosts">
    <i class="fa-solid fa-arrow-left fa-xl" style="color: #828282;"></i>
</a>

<div class="container mt-5">
    <!-- Title and tag line of learning hub -->
    <div class="text-center">
        <h1 class="display-4" style="text-align: center">Create a Blog Post</h1>
    </div>
</div>
<body>
    <!-- Title input -->
    <div style="display: flex; align-items: center; margin-top: 0px; margin-bottom: 15px;">
        <p class="lead" id="fieldName" >Title:</p>
        <input type="text" class="form-control justify-content-start inputField" id="blogTitle" placeholder="EX: How I Got Rich"
               aria-label="Title" aria-describedby="basic-addon1">
        <span class="missing-field" id="missingTitle"></span>
    </div>

    <!-- Main Topic input -->
    <div style="display: flex; align-items: center; margin-top: 0px; margin-bottom: 15px;">
        <p class="lead" id="fieldName">Main Topic:</p>
        <input type="text" class="form-control justify-content-start inputField" id="blogTopic" placeholder="EX: Money Management"
               aria-label="Topic" aria-describedby="basic-addon1">
        <span class="missing-field" id="missingTopic"></span>
    </div>

    <!-- Create the editor container -->
    <div id="editor" style="background: white;">
    </div>
    <span class="missing-field" id="missingContent"></span>

    <!-- Character Limit and Last Saved on Same Row -->
    <div class="d-flex justify-content-between align-items-center mt-2 mb-3">
        <p id="charCount" class="text-muted mb-0">Character Limit: 0 / 1000</p>
        <p id="lastSaved" class="text-muted mb-0"></p>
    </div>

@*     <!-- Source input -->
    <div style="display: flex; align-items: center">
        <p class="text-muted" id="fieldName">Sources:</p>
        <input type="text" class="form-control justify-content-start inputField" id="blogSource" placeholder="Site your resources"
               aria-label="Source" aria-describedby="basic-addon1">
    </div> *@

    <div class="d-flex justify-content-end">
        <button id="postButton" class="btn btn-primary" type="submit">Post</button>
    </div>
</body>





<script src="~/js/blogCreator.js"></script>

<style>
    #fieldName {
        margin-top: 12px;
        -webkit-text-fill-color: #3F3F2F;
    }
    .inputField {
        margin: 10px;
        margin-left: 5px;
        width: 67%
    }
    .missing-field {
        color: red;
        font-size: 12px;
        display: block;
        margin-top: 0px;
        visibility: hidden; /*hidden by default, until error*/
    }
</style>